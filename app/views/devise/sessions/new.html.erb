<% content_for :nav do %>
  <%= render 'layouts/nav_login' %>
<% end %>
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input">
    <%= f.label :email, :class => 'input-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'input-text' %>
  </div>

  <div class="input">
    <%= f.label :password, :class => 'input-label' %>
    <%= f.password_field :password, autocomplete: "current-password", :class => 'input-text' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="input input-remember">
      <%= f.check_box :remember_me, :class => 'input-checkbox' %>
      <%= f.label :remember_me, :class => 'input-label' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
