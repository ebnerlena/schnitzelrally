<ul class="sidebar">
    <%if !current_or_guest_user.player.nil?%>
        <li class="player_avatar"> <%=  avatar %> </li>
        <li class="player_name"><%= current_or_guest_user.player.name %> </li>
    <% end %>

    <li> <%= display_svg("home") %> <%= link_to "Home", routes_path %> </li>

    <% if user_signed_in? %> 
        <ul class="sidebar_link-group">
            <li> <%= display_svg("routes") %> Routen </li>
            <li> <%= display_svg("tasks") %>Aufgaben </li>
            <li> <%= display_svg("settings") %>Einstellungen </li>
            <li> <%= display_svg("logout") %> <%= link_to "Logout", logout_path %> </li>
        </ul>
    <% else %>
        <li> <%= link_to "Login", new_user_session_path %> </li>
    <% end %>
</ul>