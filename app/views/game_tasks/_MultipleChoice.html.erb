<h1> Multiple Choice </h1>

<%= form_with(model: [@route, @game_task], local: true) do |form| %>
  <% if @game_task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game_task.errors.count, "error") %> prohibited this game_task from being saved:</h2>

      <ul>
        <% @game_task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form.label "Markiere den Ort", :class => 'input-label' %>
  <div id="map" data-lat="<%= @route.latitude %>" data-long="<%= @route.longitude %>"> </div>
  
  <div class="input">
    <%= form.label 'Ortshinweis', :class => 'input-label' %>
    <%= form.text_field :hint, :class => 'input-text' %>
  </div>

  <%= form.hidden_field :latitude %>
  <%= form.hidden_field :longitude %>

  <div class="input">
    <%= form.label "Aufgaben Name", :class => 'input-label' %>
    <%= form.text_field :name, :class => 'input-text' %>
  </div>

  <div class="input">
    <%= form.label 'Frage', :class => 'input-label' %>
    <%= form.text_field :description, :class => 'input-text' %>
  </div>

  <div class="input">
    <%= form.label "Optionen", :class => 'input-label' %>
    <p> Bitte im Format: Option1, Option2, Option3, Option4</p>
    <%= form.text_field :answers, :class => 'input-text' %>
  </div>
  <div class="input">
    <%= form.label "Richtig ist...", :class => 'input-label' %>
    <p> 1 für Option1, 2 für Option2 ...</p>
    <%= form.text_field :solution, :class => 'input-text' %>
  </div>

  <div class="actions">
    <%= form.submit 'Erstellen', :class => 'btn' %>
  </div>
<% end %>
