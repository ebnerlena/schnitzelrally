<div class="card">
  <h2> Multiple Choice</h2>

  <%= form_with(model: [@route, @game_task], local: true) do |form| %>
    <% if @game_task.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@game_task.errors.count, "error") %> prohibited this game_task from being saved:</h3>

        <ul>
          <% @game_task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p class="map__instruction"> Click on the map to choose the task location </p>
    <div id="map" data-lat="<%= @route.latitude %>" data-long="<%= @route.longitude %>"> </div>
    <%= content_tag "div", id: "tasks", data: {tasks: @tasks} do %>
    <% end %>
    
    <div class="input">
      <%= form.label 'Location hint', :class => 'input-label' %>
      <%= form.text_field :hint, :class => 'input-text', :maxlength => 35 %>
    </div>

    <%= form.hidden_field :latitude %>
    <%= form.hidden_field :longitude %>

    <div class="input">
      <%= form.label "Task Name", :class => 'input-label' %>
      <%= form.text_field :name, :class => 'input-text', :maxlength => 25 %>
    </div>

    <div class="input">
      <%= form.label 'Your Question', :class => 'input-label' %>
      <%= form.text_field :description, :class => 'input-text', :maxlength => 35 %>
    </div>

    <div class="input">
      <%= form.label "Available Options", :class => 'input-label' %>
      <p class="input__hint"> Please enter in format: option1, option2, option3, option4</p>
      <%= form.text_field :answers, :class => 'input-text', :maxlength => 50 %>
    </div>
    <div class="input">
      <%= form.label "True is ? ", :class => 'input-label' %>
      <p class="input__hint"> 1 for option1, 2 for option2 ...</p>
      <%= form.text_field :solution, :class => 'input-text', :maxlength => 1 %>
    </div>

    <div class="actions">
      <%= form.submit 'Create', :class => 'btn btn--disabled' %>
    </div>
  <% end %>
</div>