<%= form_with(model: route, method: "post", local: true) do |form| %>
  <% if route.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(route.errors.count, "error") %> prohibited this route from being saved:</h2>

      <ul>
        <% route.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input">
    <%= form.label "Routenname", :class => 'input-label' %>
    <%= form.text_field :name, :class => 'input-text' %>
  </div>

  <div id="map"> </div>
  
  <%= form.hidden_field :latitude %>
  <%= form.hidden_field :longitude %>

  <div class="input">
    <div class="input-label_container">
      <%= form.label :radius, :class => 'input-label' %>
      <p class="input-range_value"></p>
    </div>
    
    <%= form.range_field :radius, in: 1..10, value: 1, :class => 'input-range' %>
    <div class="numbering">
      <p>1</p>
      <p>10</p>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Route erstellen', :class => 'btn' %>
  </div>
<% end %>
