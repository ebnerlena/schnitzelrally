<%= form_with url: "join_route", method: "post" do |form| %>  # (model: @route, local: true)

  <div class="input">
    <%= form.label :game_id, :class => 'input-label' %>
    <%= form.text_field :game_id, :class => 'input-text' %>
  </div>

   <div class="input">
    <%= form.label :playername, :class => 'input-label' %>
    <%= form.text_field :playername, :class => 'input-text' %>
  </div>

  <div class="actions">
    <%= form.submit 'Route joinen', class: 'btn' %>
  </div>
<% end %>
