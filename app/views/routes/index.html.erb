<% content_for :nav do %>
  <%= render 'layouts/nav_home' %>
<% end %>

<div class="card">
  <div class="card-home">
  <section class="intro">
    <h2 class="intro_title">Griasti zur <span>SchnitzelRally</span></h2>
    <p class="intro_text">Starte eine neue Route oder tritt mit einer SpielID einer bestehenden Route bei. </p>
  </section>

  <section class="buttons">
    <% if current_or_guest_user.player.nil? %>

      <%= button_to "Create a Player", new_player_path, { method: "get", class: 'btn' } %>

       <%= button_to 'Join Route', join_routes_path, { method: "post", class: 'btn btn--disabled' }  %>
      <%= button_to 'New Route', new_route_path, { method: "get", class: 'btn btn--disabled btn--disabled' }  %>    
      <% else %>
      <%= button_to 'Join Route', join_routes_path, { method: "post", class: 'btn' }  %>
      <%= button_to 'New Route', new_route_path, { method: "get", class: 'btn' }  %>
    <% end %>
  </section>
  </div>
</div>